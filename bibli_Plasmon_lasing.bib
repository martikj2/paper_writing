	number = {7259},
	urldate = {2015-10-19},
	journal = {Nature},
	author = {Noginov, M. A. and Zhu, G. and Belgrave, A. M. and Bakker, R. and Shalaev, V. M. and Narimanov, E. E. and Stout, S. and Herz, E. and Suteewong, T. and Wiesner, U.},
	month = aug,
