	pages = {1110--1112},
	file = {Full Text PDF:/localwrk/martikj2/Zotero_jpjmarti/storage/8T4GAUEQ/Noginov et al. - 2009 - Demonstration of a spaser-based nanolaser.pdf:application/pdf;Snapshot:/localwrk/martikj2/Zotero_jpjmarti/storage/GZQC8TR9/nature08318.html:text/html}
